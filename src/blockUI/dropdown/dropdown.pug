include .\..\iteration\iteration.pug

mixin dropdown({items=[]})
    .dropdown
        .dropdown__div-content
            .dropdown__div-text="Сколько гостей"
            .dropdown__div-icon="expand_more"
        .dropdown__div-items
            each item in items
                +iteration({content: item})
            .dropdown__div-buttons
                .dropdown__div-cancel
                .dropdown__div-ready="Применить"