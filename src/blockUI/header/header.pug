include .\..\button\button.pug
include .\..\button-border\button-border.pug

mixin header({profile = "no"})
    -let items = ["home", "about", "services", "careers", "news", "documentation"]
    header.header
        .header__label

        .header__menu-compact
            if profile=="yes"
                input.header__menu-compact-check(type="checkbox", id="header-profile")
                label.header__menu-compact-label(for="header-profile")="Menu"
            else
                input.header__menu-compact-check(type="checkbox", id="header")
                label.header__menu-compact-label(for="header")="Menu"

            .header__menu-dropdown
                if profile=="yes"
                    .header__name-profile="Gena Petukhov"

                else
                    .header__menu-dropdown-buttons
                        .header__menu-dropdown-login
                            +button-border({content: "login"})
                        .header__menu-dropdown-register
                            +button({content: "register"})

                each item in items
                    div(class="header__menu-dropdown-item header__dropdown-"+item)=item

        .header__menu
            each item in items
                div(class="header__item header-login__"+item)=item

            if profile=="yes"
                hr.header__line
                .header__name-top="Gena Petukhov"

            else
                .header__button-login
                    +button-border({content: "login"})
                .header__button-register
                    +button({content: "register"})
