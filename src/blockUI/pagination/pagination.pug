mixin pagination()
    .pagination
        .pagination__page
            .pagination__page-1
                a.pagination__page-1-a(href="#1")="1"
            .pagination__page-all
                a.pagination__page-all-a(href="#1")="2"
            .pagination__page-all
                a.pagination__page-all-a(href="#1")="3"
            .pagination__page-all
                a.pagination__page-all-a(href="#1")="..."
            .pagination__page-all
                a.pagination__page-all-a(href="#1")="15"
            .pagination__page-6
                a.pagination__page-6-a(href="#1")="arrow_forward"
        .pagination__variant
