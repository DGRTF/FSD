include \..\like-button\like-button.pug

mixin comment({ name="Алексей Леонов" ,lastSeen="2 дня назад", idcheck= "like62", feedback= ""})
    .comment
        .comment__who
            .comment__avatar
            .comment__info
                .comment__name=name
                .comment__last-seen=lastSeen
        .comment__content
            +like-button
            span.comment__feedback=feedback