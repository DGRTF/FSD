include \..\like-button\like-button.pug

mixin comment({ name="Алексей Леонов" ,when="2 дня назад", feedback= ""})
    .comment
        .comment__who
            .comment__avatar
            .comment__info
                .comment__name=name
                .comment__last-seen=when
        .comment__content
            +like-button
            span.comment__feedback=feedback