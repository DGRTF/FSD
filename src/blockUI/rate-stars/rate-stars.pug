        input.rate-stars__input(name="rating"+id value="5" id="rating_5"+id type="radio")
        label.rate-stars__label(for="rating_5"+id)
        input.rate-stars__input(name="rating"+id value="4" id="rating_4"+id type="radio")
        label.rate-stars__label(for="rating_4"+id)
        input.rate-stars__input(name="rating"+id value="3" id="rating_3"+id type="radio")
        label.rate-stars__label(for="rating_3"+id)
        input.rate-stars__input(name="rating"+id value="2" id="rating_2"+id type="radio")
        label.rate-stars__label(for="rating_2"+id)
        input.rate-stars__input(name="rating"+id value="1" id="rating_1"+id type="radio")
        label.rate-stars__label(for="rating_1"+id)